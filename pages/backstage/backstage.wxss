/* 添加课本样式 */
.con_card2{
    height:1000rpx;
    border:1px solid rgb(236,240,245);
    margin:50rpx 20rpx;
    background-color:white;
}
.con_card2 .cd_head{
    font-size:40rpx;
    font-weight:bold;
    border-bottom:1px solid rgb(137, 143, 150);
    padding:20rpx;
}
.con_card2 .cd_name{
    margin:20rpx
}
.cd_name input{
    border:1px solid rgb(137, 143, 150);
    padding:10rpx;
    margin-top:5rpx;
}
.con_card2 .cd_title{
    margin:20rpx;
}
.cd_title textarea{
    border:1px solid rgb(137, 143, 150);
    padding:10rpx;
    margin-top:5rpx;
}
.cd_btn{
    margin:40rpx 20rpx;
    font-size:30rpx;
}
.cd_btn .button{
    height:80rpx;
    width:200rpx;
    background-color:rgb(137, 143, 150);
    text-align:center;
    line-height:80rpx;
    margin:20rpx 0;
} 
.cd_finish button{
    width:60%;
    margin-bottom:30rpx
}
