/* pages/backstage/backstage.wxss */
.swiper{
    background-color:rgb(236,240,245);
    padding:1px;
}
/* 滑动操作 */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content:space-around;
    color:#ccc;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:black;
    font-size:40rpx;
    font-weight: bold;
}
.con_title{
    text-align:center;
    padding:30rpx 0;
}
.updata{
    display:flex;
    flex-wrap:wrap;
}
.con_card{
    height:250rpx;
    width:40%;
    border:1px solid rgb(236,240,245);
    margin:40rpx 30rpx;
    background-color:white;
    font-size:30rpx;
    /* border-radius:10px; */
}
.con_card .ca_name{
    border-bottom:1px solid rgb(236,240,245);
    height:60rpx;
    line-height:60rpx;
}
.ca_name .ca_tx1{
    margin-right:80rpx;
    margin-left:30rpx;
    font-weight: bold;
}
.ca_name .ca_tx2{
    font-weight:bold;
    color:rgb(156, 159, 161);
}
.con_card .ca_title{
    height:140rpx;
}
.ca_title .ca_tx3{
    margin-top:30rpx;
    margin-left:20rpx;
}
